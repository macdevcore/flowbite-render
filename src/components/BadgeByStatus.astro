---
interface Props {
	status: string;
}

const { status } = Astro.props;
---

{status == 'pending' &&
	<span class="inline-flex items-center bg-gray-200 text-gray-800 text-xs mr-2 px-3 py-1 font-normal rounded-full dark:bg-gray-700 dark:text-gray-300">
		<span class="w-2 h-2 mr-1 bg-gray-500 rounded-full"></span>OFFEN
	</span>
}
{status == 'risk' &&
	<span class="inline-flex items-center bg-amber-100 text-amber-800 text-xs mr-2 px-3 py-1 font-normal rounded-full dark:bg-amber-900 dark:text-amber-300">
		<span class="w-2 h-2 mr-1 bg-amber-500 rounded-full"></span>ACHTUNG
	</span>
}
{status == 'success' &&
	<span class="inline-flex items-center bg-green-100 text-green-800 text-xs mr-2 px-3 py-1 font-normal rounded-full dark:bg-green-900 dark:text-green-300">
		<span class="w-2 h-2 mr-1 bg-green-500 rounded-full"></span>OPTIMAL
	</span>
}
{status == 'error' &&
	<span class="inline-flex items-center bg-red-100 text-red-800 text-xs mr-2 px-3 py-1 font-normal rounded-full dark:bg-red-900 dark:text-red-300">
		<span class="w-2 h-2 mr-1 bg-red-500 rounded-full"></span>KRITISCH
	</span>
}
