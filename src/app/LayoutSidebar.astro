---
import LayoutCommon from './LayoutCommon.astro';
import NavBarSidebar from './NavBarSidebar.astro';
import SideBar from './SideBar.astro';
---

<LayoutCommon>
	<NavBarSidebar />

	<SideBar />

	<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-gray-100 lg:ml-64 dark:bg-gray-900 min-h-screen"
		>
			<slot />
		</div>
	</div>
</LayoutCommon>

<style>
	.min-h-screen{min-height: calc(100vh - 65px) !important;}
</style>
